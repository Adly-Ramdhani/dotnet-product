<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Product Management </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>

        body {
            overflow-x: hidden;
        }

        #sidebar {
            min-height: 100vh;
            width: 250px;
            background-color: #4F709C;
            color: #fff;
            transition: all 0.3s;
        }

            #sidebar.collapsed {
                width: 60px;
            }

            #sidebar .menu-header {
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 10px 15px;
                border-bottom: 1px solid #F5EFE7;
                /* background-color: #F5EFE7; */
            }

            #sidebar.collapsed .menu-item {
                display: none;
            }

        #content {
            transition: all 0.3s;
        }

            #content.collapsed {
            }

        #right-side {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background-color: #D8C4B6;
            color: #fff;
            /* border-bottom: 1px solid #ddd; */
        }

        #user-info {
            display: flex;
            align-items: center;
        }

            #user-info img {
                width: 30px;
                height: 30px;
                border-radius: 50%;
                margin-right: 10px;
            }

        #sidebar.collapsed .menu-header h5 {
            display: none;
        }
        .footer {
            background-color: #F5EFE7;
            color: black;
            text-align: center;
            padding: 10px 0;
        }


    </style>

</head>
<body>
    <header>
        <div class="d-flex">
            <!-- Sidebar -->
            <nav id="sidebar">
                <div class="menu-header">
                    <button id="toggleSidebar" class="btn btn-primary btn-sm">
                        <i class="fas fa-bars"></i>
                    </button>
                    <h5 id="menuTitle" class="mb-0 text-white">My Menu</h5>
                </div>
                <ul class="nav flex-column p-2">
                    <li class="nav-item">
                        <a href="/" class="nav-link text-white">
                            <i class="fas fa-home"></i>
                            <span class="menu-item">Home</span>
                        </a>
                    </li>
                    <li class="nav-item">
                       @{
                            var userId = User.FindFirst("id")?.Value;
                        }
                        <a href="@Url.Action("Details", "User", new { id = userId })" class="nav-link text-white">
                            <i class="fas fa-user"></i>
                            <span class="menu-item">Profile</span>
                        </a>

                    </li>
                    <a href="@Url.Action("Index", "ProductCategory")" class="nav-link text-white">
                        <i class="fas fa-cogs"></i>
                        <span class="menu-item">Product</span>
                    </a>
                    <form asp-controller="auth" asp-action="logout" method="post" id="logoutForm" class="d-inline">
                        <button type="submit" class="btn btn-link nav-link text-white p-0">
                            <i class="fas fa-cog"></i>
                            <span class="menu-item">Logout</span>
                        </button>
                    </form>
                </ul>
            </nav>

            <!-- Content -->
            <div id="content" class="flex-grow-1">
                <!-- Right-Side -->
                <div id="right-side">
                    <div>
                        <h6 class="mb-0">Product Management</h6>
                    </div>
                    <div id="user-info">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <span class="mr-3">Hello, @User.Identity.Name!</span>

                    }
                    else
                    {
                        <a class="btn btn-primary btn-sm" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                    }
                    </div>
                </div>

                <!-- Main Content -->
                <div class="p-4">
                    @RenderBody()
                </div>

                <!-- Footer -->
              

            </div>



        </div>
    </header>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/fontawesome/js/all.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

        <script>
            $(document).ready(function () {
                // Show side menu
                document.getElementById('toggleSidebar').addEventListener('click', function () {
                    var sidebar = document.getElementById('sidebar');
                    var content = document.getElementById('content');
                    var menuTitle = document.getElementById('menuTitle');
                    sidebar.classList.toggle('collapsed');
                    content.classList.toggle('collapsed');

                    // Hide/Show the menu title
                    if (sidebar.classList.contains('collapsed')) {
                        menuTitle.style.display = 'none';
                    } else {
                        menuTitle.style.display = 'block';
                    }
                });
            });
        </script>
</body>
</html>
