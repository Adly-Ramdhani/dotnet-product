@* Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Product Management</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #6a5af9, #4fc3f7);
        }

        #sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100vh;
            background: linear-gradient(to bottom, #6a5af9, #4fc3f7);
            color: #ffffff;
            transition: width 0.3s ease;
            overflow-y: auto;
            z-index: 1000;
        }

        #sidebar.collapsed {
            width: 70px;
        }

        #sidebar .menu-header {
            padding: 1rem 1.25rem;
            font-weight: 700;
            font-size: 1.3rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: #ffffff;
        }

        #toggleSidebar {
            background: transparent;
            border: none;
            color: #ffffff;
            font-size: 1.2rem;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        #sidebar.collapsed #toggleSidebar {
            transform: rotate(180deg);
        }

        #sidebar ul.nav {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        #sidebar ul.nav li.nav-item a.nav-link {
            color: #ffffff;
            padding: 0.75rem 1.5rem;
            display: flex;
            align-items: center;
            font-weight: 500;
            border-radius: 0 20px 20px 0;
            transition: all 0.3s;
            white-space: nowrap;
        }

        #sidebar ul.nav li.nav-item a.nav-link:hover,
        #sidebar ul.nav li.nav-item a.nav-link.active {
            background-color: rgba(255, 255, 255, 0.2);
            color: #ffffff;
            padding-left: 2rem;
            text-decoration: none;
        }

        #sidebar ul.nav li.nav-item a.nav-link i.fas {
            min-width: 24px;
            font-size: 1.25rem;
            margin-right: 12px;
            transition: margin 0.3s ease;
        }

        #sidebar.collapsed ul.nav li.nav-item a.nav-link .menu-item {
            display: none;
        }

        #sidebar.collapsed ul.nav li.nav-item a.nav-link i.fas {
            margin-right: 0;
            width: 100%;
            text-align: center;
        }

        #sidebar .logout-form {
            padding: 1rem 1.5rem;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
        }

        #sidebar .logout-form button {
            color: #ffffff;
            width: 100%;
            text-align: left;
            padding: 0.5rem 0;
            font-weight: 600;
            background: transparent;
            border: none;
            display: flex;
            align-items: center;
            border-radius: 0 20px 20px 0;
        }

        #sidebar .logout-form button:hover {
            background-color: rgba(255, 255, 255, 0.2);
            color: #ffffff;
            padding-left: 2rem;
        }

        #sidebar.collapsed .logout-form button .menu-item {
            display: none;
        }

        #sidebar.collapsed .logout-form button i.fas {
            margin-right: 0;
            width: 100%;
            text-align: center;
        }

        #content {
            margin-left: 0;
            padding-left: 250px;
            transition: padding-left 0.3s ease;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background-color: #ffffff;
        }

        #content.collapsed {
            padding-left: 70px;
        }

        header {
            background-color: #fff;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        main {
            padding: 2rem;
            flex-grow: 1;
            background-color: #f8f9fa;
        }

        footer {
            background-color: #fff;
            padding: 1rem;
            border-top: 1px solid #dee2e6;
            font-size: 0.85rem;
            color: #6c757d;
            text-align: center;
        }
    </style>
</head>
<body>
    <nav id="sidebar">
        <div class="menu-header">
            <button id="toggleSidebar"><i class="fas fa-bars"></i></button>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a href="@Url.Action("Index", "Home")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")">
                    <i class="fas fa-home"></i>
                    <span class="menu-item">Home</span>
                </a>
            </li>
            <li class="nav-item">
                @{
                    var userId = User.FindFirst("id")?.Value ?? "";
                }
                <a href="@Url.Action("Details", "User", new { id = userId })" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "User" ? "active" : "")">
                    <i class="fas fa-user"></i>
                    <span class="menu-item">Profile</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Index", "ProductCategory")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "ProductCategory" ? "active" : "")">
                    <i class="fas fa-cogs"></i>
                    <span class="menu-item">Category</span>
                </a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Index", "Products")" class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Products" ? "active" : "")">
                    <i class="fas fa-box-open"></i>
                    <span class="menu-item">Product</span>
                </a>
            </li>
        </ul>
        <div class="logout-form mt-auto">
            <form asp-controller="Auth" asp-action="Logout" method="post">
                <button type="submit">
                    <i class="fas fa-sign-out-alt"></i>
                    <span class="menu-item">Logout</span>
                </button>
            </form>
        </div>
    </nav>

    <div id="content">
        <header>
            <h6>Product Management</h6>
            <div>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <span class="me-3">Hello, <strong>@User.Identity.Name</strong>!</span>
                }
                else
                {
                    <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Login">Login</a>
                }
            </div>
        </header>

        <main>
            @RenderBody()
        </main>

        <footer>
            &copy; @DateTime.Now.Year Adly. All rights reserved.
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <script>
        const toggleBtn = document.getElementById('toggleSidebar');
        const sidebar = document.getElementById('sidebar');
        const content = document.getElementById('content');

        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
            content.classList.toggle('collapsed');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
