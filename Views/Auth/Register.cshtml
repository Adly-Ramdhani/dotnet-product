@model ProductManagementApp.Models.RegisterRequest
@{
    Layout = null;
    ViewBag.Title = "Register";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container mt-5" style="max-width: 400px;">
        <div class="card shadow rounded-4">
            <div class="card-body p-4">
                <h3 class="text-center mb-4">Register</h3>

                @using (Html.BeginForm())
                {
                    <div class="form-group mb-3">
                        <label for="FullName">Nama Lengkap</label>
                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Masukkan nama lengkap", required = "required" })
                    </div>

                    <div class="form-group mb-3">
                        <label for="Email">Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Masukkan email", type = "email", required = "required" })
                    </div>

                    <div class="form-group mb-4">
                        <label for="Password">Password</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Masukkan password", required = "required" })
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Register</button>
                }

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3">
                        @ViewBag.Error
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
