@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml"; // pastikan layout ini benar
}

<div class="container py-5">
    <div class="row align-items-center">
        <div class="col-md-6 text-center text-md-start">
            <h1 class="display-4 fw-bold">Welcome to Product Management App</h1>
            <p class="lead text-muted mt-3">
                Simplify how you manage your products, from development to deployment.
                Monitor, organize, and collaborate — all in one place.
            </p>
            @* <div class="mt-4">
                <a class="btn btn-primary btn-lg me-2" href="/Products">📦 View Products</a>
            </div> *@
        </div>
        <div class="col-md-6 mt-4 mt-md-0 text-center">
            <img src="https://cdn-icons-png.flaticon.com/512/891/891419.png"
                 class="img-fluid"
                 alt="Product Management Illustration"
                 style="max-height: 300px;">
        </div>
    </div>
</div>

@section Scripts {
    <!-- SweetAlert2 CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @* Pop-up jika login berhasil *@
    @if (TempData["LoginSuccess"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    icon: 'success',
                    title: 'Login Berhasil!',
                    text: '@TempData["LoginSuccess"]',
                    confirmButtonColor: '#28a745',
                    confirmButtonText: 'OK'
                });
            });
        </script>
    }

    @* Script opsional jika masih pakai alert bootstrap *@
    <script>
        setTimeout(function () {
            var alertElement = document.querySelector('.alert');
            if (alertElement) {
                var alertInstance = bootstrap.Alert.getOrCreateInstance(alertElement);
                alertInstance.close();
            }
        }, 4000);
    </script>
}
